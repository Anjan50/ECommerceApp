<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".YourAccount">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/profile_header_background"
        android:id="@+id/profile_header"
        android:orientation="horizontal"/>
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="150dp"
        android:id="@+id/dp_profile"
        android:background="@drawable/curved_background"
        android:layout_centerHorizontal="true"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_header">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <ImageView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/ic_name"
                android:layout_marginTop="50dp"
                android:id="@+id/name_image"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:layout_toRightOf="@+id/name_image"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_marginTop="50dp"
                android:id="@+id/name_tv_profile"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/data_name"
                android:text="Dhaval Thummar"
                android:layout_toRightOf="@+id/name_image"
                android:textStyle="bold"
                android:textSize="18dp"
                android:textColor="#111111"
                android:layout_below="@+id/name_tv_profile"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="10dp"
                android:textIsSelectable="true"/>

            <ImageView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/ic_email"
                android:layout_below="@+id/name_image"
                android:layout_marginTop="30dp"
                android:id="@+id/email_image"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:layout_below="@+id/name_image"
                android:layout_marginTop="30dp"
                android:layout_toRightOf="@+id/email_image"
                android:textStyle="bold"
                android:textSize="15dp"
                android:id="@+id/email_tv_profile"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/data_email"
                android:text="190304105062@paruluniversity.ac.in"
                android:layout_toRightOf="@+id/email_image"
                android:textStyle="bold"
                android:textSize="16dp"
                android:textColor="#111111"
                android:layout_below="@+id/email_tv_profile"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="10dp"
                android:textIsSelectable="true"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/email_image"
                android:layout_marginTop="30dp"
                android:layout_alignParentBottom="true"
                android:text="Logout"
                android:id="@+id/logout"/>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>